namespace :maintenance do
  desc 'start maintenance mode'
  task :start do
    on roles(:app), in: :parallel do
      execute "touch #{release_path}/tmp/maintenance"
    end
  end

  desc 'stop maintenance mode'
  task :stop do
    on roles(:app), in: :parallel do
      execute "rm -f #{release_path}/tmp/maintenance"
    end
  end
end
