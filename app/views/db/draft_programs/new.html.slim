= render "db/works/header", work: @work

- if params[:id].present?
  = render "db/programs/edit_type_tab", work: @work, program: @program
- else
  = render "db/programs/create_type_tab", work: @work, program: @program

.row
  .col-sm-7
    = render "form", work: @work, program: @program, draft_program: @draft_program
  .col-sm-5
    = render "db/programs/sidebar"
