- title t("resources.cast.cast_list")

.l-topbar.container-fluid.p-x-1
  .row.flex-items-xs-between
    .col-xs
      = render "db/application/topbar_title", parent: @work, child: t("resources.cast.cast_list")
    - if user_signed_in? && current_user.committer?
      .col-xs.text-xs-right
        = link_to new_db_work_cast_path(@work), class: "btn btn-outline-primary" do
          = icon "pencil-square-o"
          .btn__text
            = t "resources.cast.new_casts"

= render "db/works/subnav", work: @work

.container-fluid.p-a-1
  - if @casts.present?
    .c-card
      table.table.table-hover
        thead
          tr
            th ID
            th = t "activerecord.attributes.cast.person_id"
            th = t "activerecord.attributes.cast.name"
            th = t "activerecord.attributes.cast.part"
            th = t "activerecord.attributes.cast.sort_number"
            - if policy(@casts).edit?
              th = t "words.edit"
            - if policy(@casts).hide?
              th = t "words.hide"
            - if policy(@casts).destroy?
              th = t "words.delete"
        tbody
          - @casts.each do |cast|
            tr
              td = cast.id
              td = cast.person.name
              td = cast.name.presence || "-"
              td = cast.part.presence || "-"
              td = cast.sort_number
              - if policy(cast).edit?
                td = link_to t("words.edit"), edit_db_work_cast_path(@work, cast), class: "btn btn-primary btn-sm"
              - if policy(cast).hide?
                td
                  - if cast.published?
                    = link_to t("words.hide"), hide_db_work_cast_path(@work, cast), class: "btn btn-warning btn-sm", data: { method: "patch", confirm: t("messages.are_you_sure") }
              - if policy(cast).destroy?
                td = link_to t("words.delete"), db_work_cast_path(@work, cast), class: "btn btn-danger btn-sm", data: { method: :delete, confirm: t("messages.are_you_sure") }

  - else
    = render "application/components/empty", text: t("resources.cast.there_are_no_casts")
