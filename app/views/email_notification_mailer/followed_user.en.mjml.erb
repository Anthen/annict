<mj-section background-color="#fff">
  <mj-column>
    <mj-text align="center" padding-top="0px">You have a new follower on Annict.</mj-text>
    <mj-image src="<%= ann_email_image_url(@user.profile, :tombo_avatar, size: "140x140") %>" align="center" width="70" border-radius="50%" href="<%= user_url(@user.username) %>"></mj-image>
    <mj-text align="center" font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@user.profile.name}" %></mj-text>
    <mj-text align="center" padding-top="0px"><%= "@#{@user.username}" %></mj-text>
    <mj-text align="center"><%= "#{@user.profile.description}" %></mj-text>
    <mj-button href="<%= user_url(@user.username, utm_source: 'email_notification', utm_campaign: 'followed_user', utm_medium: 'email') %>" background-color="#f85b73">View Profile</mj-button>
  </mj-column>
</mj-section>
