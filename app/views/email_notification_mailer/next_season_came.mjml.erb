<mj-section background-color="#fff">
  <mj-text align="center" line-height="22px">
    <%== I18n.t("email_notification_mailer.next_season_came.description_html", name: @season.local_name) %>
  </mj-text>

  <% @works.each do |work| %>
    <%= render "email_notification_mailer/work", work: work, utm_campaign: "next_season_came" %>
  <% end %>

  <mj-section padding-top="10px" padding-bottom="20px">
    <mj-button href="<%= season_works_url(slug: @season.slug, utm_source: 'email_notification', utm_campaign: 'next_season_came', utm_medium: 'email', domain: local_domain) %>" background-color="#f85b73"><%= I18n.t("email_notification_mailer.next_season_came.view_more", name: @season.local_name) %></mj-button>
  </mj-section>
</mj-section>
