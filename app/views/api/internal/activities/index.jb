# frozen_string_literal: true

json = {}

json[:activities] = Rails.cache.fetch [I18n.locale, @user&.id, @activities] do
  @activities.map do |activity|
    Rails.cache.fetch [I18n.locale, @user&.id, activity] do
      render "/api/internal/activities/activity", activity: activity, user: @user
    end
  end
end

json
