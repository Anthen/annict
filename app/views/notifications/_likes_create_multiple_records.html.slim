- action_user = notification.action_user
- multiple_record = notification.trackable.recipient
- work = multiple_record.work
- records = multiple_record.records.order(:id)

- user_name = link_to action_user.profile.name, user_path(action_user.username), class: "username"
- work_title = link_to work.title, work_path(work), class: "work-title"

span.mr-zp25
  = action_user.decorate.name_link
| liked your records on
span.ml-zp25
  = work.decorate.title_link
span.mx-zp25
  = "#{records.first.episode.decorate.local_number} ~ #{records.last.episode.decorate.local_number}"

.small.text-muted
  = local_time_ago_in_words(notification.created_at)
