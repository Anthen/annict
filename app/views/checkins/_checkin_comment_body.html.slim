- if defined? checkin
  - hide_comment = user_signed_in? && current_user.hide_checkin_comment?(checkin)
  .checkin-comment ng-controller='CheckinCommentCtrl' ng-init="init({ hideComment: #{hide_comment} })"
    .checkin-comment__wrapper ng-click='showComment()' ng-class='{ "hide-comment": hideComment }' class="#{hide_comment ? 'hide-comment' : ''}"
    .checkin-comment__body.ani-simple-format class="#{hide_comment ? 'hide-comment' : ''}" ng-class='{ "hide-comment": hideComment }'
      = checkin.comment
- else
  .checkin-comment ng-controller='CheckinCommentCtrl' ng-init='init({ hideComment: activity.links.checkin.hide_comment })' ng-if='activity.links.checkin.comment.length > 0'
    .checkin-comment__wrapper ng-click='showComment()' ng-class='{ "hide-comment": hideComment }'
    .checkin-comment__body ng-class='{ "hide-comment": hideComment }' ng-bind-html='activity.links.checkin.comment | simpleFormat'
