h2.h4.text-center.mb-2.font-weight-bold = t "words.users"
- if users.present?
  - users.each do |mute_user|
    .u-underline.py-1
      .row
        .col.u-flex-grow-0.pr-0
          = link_to user_path(mute_user.muted_user.username) do
            = ann_image_tag(mute_user.muted_user.profile, :tombo_avatar, size: "50x50", class: "rounded-circle")
        .col
          = link_to mute_user.muted_user.profile.name, user_path(mute_user.muted_user.username), class: "profile-name"
        .col.u-flex-grow-0
          = link_to t("words.unmute"), mute_user_path(mute_user), class: "btn btn-primary btn-sm", data: { method: :delete, confirm: t("messages._common.are_you_sure") }
- else
  = render "application/components/empty", text: t("messages.mutes.no_muted_users_found")
